<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:layout_marginTop="@dimen/layout_6dp"
        android:background="@drawable/accordingmaterialtop_pink_sharp"
        android:orientation="vertical"
        android:padding="@dimen/layout_5dp">

        <LinearLayout
            android:id="@+id/ll_scan_inlocator"
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_moveinlocator"
                style="@style/app_text_ingreen"
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/move_instore" />

            <EditText
                android:id="@+id/et_scan_moveinlocator"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/materialText_color"
                android:textCursorDrawable="@drawable/et_cursor_yellow"
                android:textSize="@dimen/textSize_14sp" />

        </LinearLayout>

        <View style="@style/line_in_pink_style"></View>

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/app_text_ingreen"
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="wrap_content"
                android:text="@string/locator" />

            <TextView
                android:id="@+id/tv_locator"
                style="@style/ser_text_ingreen"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:layout_weight="1" />

            <TextView
                style="@style/app_text_ingreen"
                android:layout_width="@dimen/layout_40dp"
                android:layout_height="wrap_content"
                android:text="@string/label_storage" />

            <TextView
                android:id="@+id/tv_storage"
                style="@style/ser_text_ingreen"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_5dp"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_head"
        android:layout_marginTop="@dimen/layout_6dp">

        <include layout="@layout/ryitem_common" />
    </LinearLayout>

    <include
        layout="@layout/inclu_commit" />
</RelativeLayout>