<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0.5dp"
        android:background="@color/gray_da" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <LinearLayout
        style="@style/itemstyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item_seq"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black_32"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:textColor="@color/black_32"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_model"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/black_32"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_picture_no"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:textColor="@color/black_32"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_send_check_num"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black_32"
            android:textSize="@dimen/textSize_14sp" />

        <EditText
            android:id="@+id/et_ok_num"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black_32"
            android:background="@null"
            android:textCursorDrawable="@color/yellow_text"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/tv_check_state"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/black_32"
            android:textSize="@dimen/textSize_14sp" />

    </LinearLayout>

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/ll_form_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@drawable/checkl_detail_form_bg"
            android:orientation="vertical">

            <LinearLayout
                style="@style/itemstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/form_detail_head_back"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/item_seq"
                    android:textColor="@color/check_detail_form_head_text"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/check_item"
                    android:textColor="@color/check_detail_form_head_text"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/aql"
                    android:textColor="@color/check_detail_form_head_text"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/select_check_num"
                    android:textColor="@color/check_detail_form_head_text"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/ac"
                    android:textColor="@color/check_detail_form_head_text"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/re"
                    android:textColor="@color/check_detail_form_head_text"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/project_check"
                    android:textColor="@color/check_detail_form_head_text"
                    android:textSize="@dimen/textSize_14sp" />

                <TextView
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="@string/defect_num"
                    android:textColor="@color/check_detail_form_head_text"
                    android:textSize="@dimen/textSize_14sp" />

            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_list_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    </LinearLayout>

</LinearLayout>
