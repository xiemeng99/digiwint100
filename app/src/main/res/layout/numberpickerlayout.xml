<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/layout_20dp">

    <NumberPicker
        android:layout_gravity="center"
        android:id="@+id/num_picker"
        android:layout_width="@dimen/layout_80dp"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/tv_sure"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/layout_20dp"
        android:layout_marginLeft="@dimen/layout_20dp"
        android:layout_marginRight="@dimen/layout_20dp"
        android:background="@drawable/setup_dialog_button_bg"
        android:gravity="center"
        android:padding="@dimen/layout_10dp"
        android:text="@string/yes"
        android:textColor="?attr/Base_color"
        android:textSize="@dimen/textSize_14sp" />
</LinearLayout>