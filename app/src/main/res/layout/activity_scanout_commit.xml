<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_title_toolbar_bar"></include>

    <LinearLayout
        android:id="@+id/ll_put_in_store_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:layout_marginTop="@dimen/layout_6dp"
        android:background="@drawable/accordingmaterialtop_pink_sharp"
        android:orientation="vertical"
        android:padding="@dimen/layout_5dp">

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/shipping_order"
                style="@style/app_text_ingreen"/>

            <TextView
                android:id="@+id/tv_head_post_order"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                style="@style/ser_text_ingreen"/>

        </LinearLayout>

        <View style="@style/line_in_pink_style"></View>

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/shipping_date"
                style="@style/app_text_ingreen"/>

            <TextView
                android:id="@+id/tv_head_date"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1.5"
                style="@style/ser_text_ingreen" />

        </LinearLayout>

        <View style="@style/line_in_pink_style"></View>

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/custom"
                style="@style/app_text_ingreen"/>

            <TextView
                android:id="@+id/tv_custom"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                style="@style/ser_text_ingreen"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0dp"
        android:layout_above="@+id/commit"
        android:layout_below="@+id/ll_put_in_store_head"
        android:layout_marginTop="@dimen/layout_10dp"
        android:layout_weight="1">

        <include layout="@layout/ryitem_common" />
    </LinearLayout>

    <include layout="@layout/inclu_commit" />

</LinearLayout>