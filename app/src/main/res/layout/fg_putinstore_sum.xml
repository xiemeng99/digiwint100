<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/ll_put_in_store_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:background="@drawable/accordingmaterialtop_pink_sharp"
        android:orientation="vertical"
        android:padding="@dimen/layout_5dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/include">

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/layout_30dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/post_material_order"
                style="@style/app_text_ingreen"/>

            <TextView
                android:id="@+id/tv_head_post_order"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                style="@style/ser_text_ingreen" />

        </LinearLayout>

        <View style="@style/line_in_pink_style"></View>

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="@dimen/layout_30dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/data"
                style="@style/app_text_ingreen" />

            <TextView
                android:id="@+id/tv_head_date"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                style="@style/ser_text_ingreen" />

            <TextView
                android:layout_width="@dimen/layout_30dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="@string/department"
                style="@style/app_text_ingreen" />

            <TextView
                android:id="@+id/tv_head_department"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                style="@style/ser_text_ingreen"/>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/inclu_commit"
        android:id="@+id/include" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/commit"
        android:layout_below="@+id/ll_put_in_store_head"
        android:layout_marginTop="@dimen/layout_6dp">

        <include layout="@layout/ryitem_common" />
    </LinearLayout>
</RelativeLayout>