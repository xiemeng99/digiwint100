<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_ll"
    style="@style/ry_style"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        style="@style/itemstyle"
        android:paddingLeft="@dimen/layout_0dp"
        android:paddingRight="@dimen/layout_0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/app_text_inwhite"
            android:layout_width="@dimen/layout_60dp"
            android:layout_height="wrap_content"
            android:text="@string/miscellaneous_out_no" />

        <TextView
            android:id="@+id/tv_item_miscellaneous_in_no"
            style="@style/ser_text_inwhite"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/layout_3dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <View style="@style/ry_line_style" />

    <LinearLayout
        style="@style/itemstyle"
        android:paddingLeft="@dimen/layout_0dp"
        android:paddingRight="@dimen/layout_0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/app_text_inwhite"
            android:layout_width="@dimen/layout_60dp"
            android:layout_height="wrap_content"
            android:text="@string/data" />

        <TextView
            android:id="@+id/tv_item_date"
            style="@style/ser_text_inwhite"
            android:layout_width="@dimen/layout_0dp"
            android:layout_marginLeft="@dimen/layout_3dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </LinearLayout>
    <View style="@style/ry_line_style" />

    <LinearLayout
        style="@style/itemstyle"
        android:paddingLeft="@dimen/layout_0dp"
        android:paddingRight="@dimen/layout_0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="4">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">
            <TextView
                style="@style/app_text_inwhite"
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="wrap_content"
                android:text="@string/applicant" />

            <TextView
                android:id="@+id/tv_item_person"
                style="@style/ser_text_inwhite"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_3dp"
                android:layout_weight="1"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="2">
            <TextView
                style="@style/app_text_inwhite"
                android:layout_width="@dimen/layout_60dp"
                android:layout_height="wrap_content"
                android:text="@string/department" />

            <TextView
                android:id="@+id/tv_item_department"
                style="@style/ser_text_inwhite"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_3dp"
                android:layout_weight="1"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>
