                android:layout_marginRight="@dimen/layout_25dp"
                android:layout_marginTop="@dimen/layout_5dp"
                android:background="@color/login_color_line" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_25dp">

            <RelativeLayout
                android:id="@+id/rl_entid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_entid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/layout_50dp"
                    android:src="@drawable/login_entid_off" />

                <TextView
                    android:id="@+id/tv_entid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_50dp"
                    android:layout_toLeftOf="@id/iv_entid"
                    android:gravity="bottom"
                    android:textColor="@color/white_ff"
                    android:textSize="@dimen/textSize_14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/line_entid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_0.5dp"
                android:layout_below="@id/rl_entid"
                android:layout_marginLeft="@dimen/layout_25dp"
                android:layout_marginRight="@dimen/layout_25dp"
                android:layout_marginTop="@dimen/layout_5dp"
                android:background="@color/login_color_line" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_25dp">

