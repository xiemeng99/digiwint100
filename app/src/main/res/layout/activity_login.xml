                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_50dp"
                    android:layout_toLeftOf="@id/iv_site"
                    android:textColor="@color/white_ff"
                    android:textSize="@dimen/textSize_14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/line_site"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_0.5dp"
                android:layout_below="@id/rl_site"
                android:layout_marginLeft="@dimen/layout_25dp"
                android:layout_marginRight="@dimen/layout_25dp"
                android:layout_marginTop="@dimen/layout_5dp"
                android:background="@color/login_color_line" />

        </RelativeLayout>
