    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:paddingTop="@dimen/layout_120dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_20dp">

            <RelativeLayout
                android:id="@+id/rl_login_user"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/iv_login_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/layout_50dp"
                    android:src="@drawable/login_user_on" />

                <EditText
                    android:id="@+id/et_login_user"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/layout_50dp"
                    android:layout_toLeftOf="@id/iv_login_user"
                    android:background="@null"
                    android:gravity="bottom"
                    android:imeOptions="actionNext"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textCursorDrawable="@drawable/et_cursor_color"
                    android:textSize="@dimen/textSize_14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/line_login_user"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_0.5dp"
                android:layout_below="@id/rl_login_user"
                android:layout_marginLeft="@dimen/layout_25dp"
                android:layout_marginRight="@dimen/layout_25dp"
                android:layout_marginTop="@dimen/layout_5dp"
                android:background="@color/black" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_25dp">

            <RelativeLayout
                android:id="@+id/rl_login_lock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <CheckBox
                    android:id="@+id/cb_remeber_password"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:button="@drawable/login_rp_checkbox_bg"
                    android:layout_marginRight="@dimen/layout_50dp"/>

