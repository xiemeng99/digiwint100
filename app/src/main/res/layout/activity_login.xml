                    android:layout_centerHorizontal="true"
                    android:layout_marginLeft="@dimen/layout_50dp"
                    android:layout_toLeftOf="@id/cb_remeber_password"
                    android:background="@null"
                    android:focusableInTouchMode="true"
                    android:inputType="textPassword"
                    android:textColor="@color/login_color_line"
                    android:textCursorDrawable="@drawable/et_cursor_color"
                    android:textSize="@dimen/textSize_14sp" />
            </RelativeLayout>

            <View
                android:id="@+id/line_login_lock"
                android:layout_width="match_parent"
                android:layout_height="@dimen/layout_0.5dp"
                android:layout_below="@id/rl_login_lock"
