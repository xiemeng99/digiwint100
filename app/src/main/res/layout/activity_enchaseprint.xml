<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_48dp"
        android:background="@color/toolBar_color"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="@dimen/layout_30dp"
            android:layout_height="@dimen/welcome_text_margin"
            android:paddingBottom="@dimen/layout_14dp"
            android:paddingTop="@dimen/layout_14dp"
            android:src="@drawable/white_back" />

        <TextView
            android:id="@+id/tv_title_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="@string/enchaseprint"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_18sp" />

        <ImageView
            android:id="@+id/img_printer"
            android:layout_width="@dimen/layout_36dp"
            android:layout_height="@dimen/welcome_text_margin"
            android:layout_gravity="right"
            android:paddingBottom="@dimen/layout_14dp"
            android:paddingTop="@dimen/layout_14dp"
            android:src="@mipmap/print_title" />

        <CheckBox
            android:id="@+id/cb_ischoose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:button="@drawable/autoprint"
            android:text="@string/autoprint"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_10dp"
            android:singleLine="true"
            android:text="@string/print_count"
            android:textColor="@color/cdcdcd" />

        <TextView
            android:id="@+id/tv_print_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cdcdcd" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/layout_20dp"
            android:singleLine="true"
            android:text="@string/num"
            android:textColor="@color/cdcdcd" />

        <TextView
            android:id="@+id/tv_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:textColor="@color/cdcdcd" />
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:layout_marginTop="@dimen/layout_10dp"
        android:background="@drawable/yellow_scandetail_bg">

        <EditText
            android:id="@+id/et_barcode"
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:singleLine="true"
            android:textColor="@color/black_32"
            android:textCursorDrawable="@drawable/et_cursor_yellow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/layout_10dp"
        android:background="@drawable/green_scandetail_bg"
        android:orientation="vertical"
        android:paddingBottom="@dimen/layout_10dp">

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/form_head_back"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_box_code"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_box_code"
                    android:layout_width="@dimen/layout_50dp"
                    android:layout_height="wrap_content"
                    android:text="@string/box_code"
                    android:textColor="@color/white"
                    android:textSize="@dimen/textSize_14sp" />

                <EditText
                    android:id="@+id/et_boxcode"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@null"
                    android:textCursorDrawable="@drawable/et_cursor_yellow"
                    android:textSize="@dimen/textSize_14sp" />

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_width="@dimen/layout_36dp"
                    android:layout_height="@dimen/layout_20dp"
                    android:layout_gravity="right"
                    android:src="@drawable/search" />
            </LinearLayout>
        </LinearLayout>

        <View
            style="@style/ry_line_style"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp" />


        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/red50"
            android:orientation="horizontal">

            <TextView
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/item_seq"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/barcode_type"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:text="@string/barcode_code"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/weight"
                android:textColor="@color/white"
                android:textSize="@dimen/textSize_14sp" />
        </LinearLayout>

        <com.yanzhenjie.recyclerview.swipe.SwipeMenuRecyclerView
            android:id="@+id/rv_swipemenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/layout_10dp"
            android:padding="@dimen/layout_5dp" />
    </LinearLayout>

</LinearLayout>