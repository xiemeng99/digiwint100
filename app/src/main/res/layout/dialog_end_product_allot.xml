<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/layout_7dp"
    android:layout_marginRight="@dimen/layout_7dp"
    android:background="@drawable/dialog_sharp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/layout_10dp"
        android:paddingRight="@dimen/layout_10dp"
        android:background="@drawable/dialog_sharp2"
        android:orientation="vertical">

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_7dp"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/layout_0dp"
            android:paddingRight="@dimen/layout_2dp">

            <TextView
                android:id="@+id/tv_item_name_string"
                style="@style/app_text_inwhite"
                android:layout_width="@dimen/layout_50dp"
                android:layout_height="wrap_content"
                android:text="@string/item_name" />

            <TextView
                android:id="@+id/tv_item_name"
                style="@style/ser_text_inwhite"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2" />

            <TextView
                android:id="@+id/tv_unit"
                style="@style/ser_text_inwhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="@dimen/layout_10dp" />
        </LinearLayout>


        <View
            android:id="@+id/line_2"
            style="@style/ry_line_style" />

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/layout_0dp"
            android:paddingRight="@dimen/layout_2dp">

            <TextView
                android:id="@+id/tv_item_format_string"
                style="@style/app_text_inwhite"
                android:layout_width="@dimen/layout_50dp"
                android:layout_height="wrap_content"
                android:text="@string/model" />

            <TextView
                android:id="@+id/tv_item_format"
                style="@style/ser_text_inwhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_14sp" />
        </LinearLayout>

        <View
            android:id="@+id/line_3"
            style="@style/ry_line_style" />

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/layout_0dp"
            android:paddingRight="@dimen/layout_2dp">

            <TextView
                android:id="@+id/tv_item_no_string"
                style="@style/app_text_inwhite"
                android:layout_width="@dimen/layout_50dp"
                android:layout_height="wrap_content"
                android:text="@string/item_no" />

            <TextView
                android:id="@+id/tv_item_no"
                style="@style/ser_text_inwhite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/textSize_14sp" />
        </LinearLayout>

        <View
            android:id="@+id/line_4"
            style="@style/ry_line_style" />

        <LinearLayout
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/layout_0dp"
            android:paddingRight="@dimen/layout_2dp">

            <TextView
                android:id="@+id/tv_apply_number_string"
                style="@style/app_text_inwhite"
                android:layout_width="@dimen/layout_50dp"
                android:layout_height="wrap_content"
                android:text="@string/apply_number" />

            <TextView
                android:id="@+id/tv_apply_number"
                style="@style/ser_text_inwhite"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/tv_stock_balance_string"
                style="@style/app_text_inwhite"
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:text="@string/stock_balance" />

            <TextView
                android:id="@+id/tv_stock_qty"
                style="@style/ser_text_inwhite"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:id="@+id/line_5"
            style="@style/ry_line_style" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_7dp"
            android:orientation="horizontal">

            <LinearLayout
                style="@style/itemstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/layout_0dp"
                android:paddingRight="@dimen/layout_2dp">

                <TextView
                    android:id="@+id/tv_match_number_string"
                    style="@style/app_text_inwhite"
                    android:layout_width="@dimen/layout_50dp"
                    android:layout_height="match_parent"
                    android:text="@string/match_number" />

                <TextView
                    android:id="@+id/tv_match_number"
                    style="@style/ser_text_inwhite"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/tv_line_store_string"
                    style="@style/app_text_inwhite"
                    android:layout_width="@dimen/layout_70dp"
                    android:layout_height="wrap_content"
                    android:text="@string/line_store" />

                <TextView
                    android:id="@+id/tv_line_store_qty"
                    style="@style/ser_text_inwhite"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

        </RelativeLayout>
    </LinearLayout>

    <ImageView
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/layout_30dp"
        android:background="@color/alpha_00"
        android:src="@drawable/close" />


</LinearLayout>