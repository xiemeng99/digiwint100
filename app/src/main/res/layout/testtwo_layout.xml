<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mzx_item_ll"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/layout_7dp"
    android:background="@drawable/green_scandetail_bg"
    android:orientation="vertical"
    android:padding="@dimen/layout_10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mzx_liaohao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_30dp"
            android:text="料号"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/mzx_liaohao_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="料号"
            android:textSize="@dimen/textSize_14sp" />
    </LinearLayout>

    <View
        android:id="@+id/mzx_line_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0.5dp"
        android:layout_marginBottom="@dimen/layout_8dp"
        android:layout_marginTop="@dimen/layout_8dp"
        android:background="@color/gray_f0"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mzx_pinming"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_30dp"
            android:text="品名"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/mzx_pinming_value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="品名"
            android:textSize="@dimen/textSize_14sp" />
    </LinearLayout>

    <View
        android:id="@+id/mzx_line_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0.5dp"
        android:layout_marginBottom="@dimen/layout_8dp"
        android:layout_marginTop="@dimen/layout_8dp"
        android:background="@color/gray_f0"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/mzx_rukuliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/layout_16dp"
            android:text="入库量"
            android:textSize="@dimen/textSize_14sp" />

        <TextView
            android:id="@+id/mzx_rukuliang_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="入库量"
            android:textSize="@dimen/textSize_14sp"></TextView>

        <LinearLayout
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:gravity="right"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/mzx_pipeiliang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/layout_16dp"
                android:gravity="center"
                android:text="匹配量"
                android:textSize="@dimen/textSize_14sp" />

            <TextView
                android:id="@+id/mzx_pipeiliang_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="匹配量"
                android:textSize="@dimen/textSize_14sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>