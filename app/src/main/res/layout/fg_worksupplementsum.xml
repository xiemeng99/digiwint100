<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/inclu_commit"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/rl_top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_6dp"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_marginRight="@dimen/layout_10dp"
                android:layout_marginTop="@dimen/layout_6dp"
                android:background="@drawable/accordingmaterialtop_pink_sharp"
                android:orientation="vertical"
                android:padding="@dimen/layout_7dp">

                <LinearLayout
                    style="@style/ry_sum_itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/layout_60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/material_returning_number"
                        style="@style/app_text_ingreen"  />

                    <TextView
                        android:id="@+id/tv_material_returning_number"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="@color/materialText_color"
                        android:textSize="@dimen/textSize_14sp" />
                </LinearLayout>

                <View style="@style/ry_line_style"/>

                <LinearLayout
                    style="@style/ry_sum_itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/layout_60dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/data"
                        style="@style/app_text_ingreen"  />

                    <TextView
                        android:id="@+id/tv_date"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_10dp"
                        android:layout_weight="1"
                        android:background="@null"
                        android:textColor="@color/materialText_color"
                        android:textSize="@dimen/textSize_14sp" />
                </LinearLayout>

                <View style="@style/ry_line_style"/>

                <LinearLayout
                    style="@style/ry_sum_itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_returned_person_string"
                        android:layout_width="@dimen/layout_60dp"
                        android:layout_height="wrap_content"
                        android:text="@string/apply_person"
                        style="@style/app_text_ingreen" />

                    <TextView
                        android:id="@+id/tv_returned_person"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/layout_10dp"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="@dimen/textSize_14sp" />

                    <TextView
                        android:id="@+id/tv_returned_material_department_string"
                        android:layout_width="@dimen/layout_30dp"
                        android:layout_height="wrap_content"
                        android:text="@string/department"
                        style="@style/app_text_ingreen"  />

                    <TextView
                        android:id="@+id/tv_returned_material_department"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/layout_10dp"
                        android:textColor="@color/materialText_color"
                        android:textSize="@dimen/textSize_14sp" />

                </LinearLayout>
            </LinearLayout>

            <include layout="@layout/ryitem_common" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>