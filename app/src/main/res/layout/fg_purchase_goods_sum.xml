<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/activity_distribute"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/white"
tools:context="digiwin.smartdepott100.module.activity.produce.distribute.DistributeActivity">

<ScrollView
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    android:layout_alignParentBottom="true"
    android:layout_alignParentStart="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_post_order"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/layout_10dp"
            android:layout_marginRight="@dimen/layout_10dp"
            android:layout_marginBottom="@dimen/layout_6dp"
            android:layout_marginTop="@dimen/layout_6dp"
            android:orientation="vertical"
            android:focusable="true"
            android:background="@drawable/accordingmaterialtop_pink_sharp"
            android:padding="@dimen/layout_7dp">

            <LinearLayout
                style="@style/ry_sum_itemstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/layout_60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/app_text_ingreen"
                    android:text="@string/purchase_no"
                    />
                <TextView
                    android:id="@+id/tv_head_post_order"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_3dp"
                    android:layout_weight="3"
                    style="@style/ser_text_ingreen"
                    />
            </LinearLayout>

            <View style="@style/line_in_pink_style"/>

            <LinearLayout
                style="@style/ry_sum_itemstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/layout_60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/app_text_ingreen"
                    android:text="@string/data"
                    />

                <TextView
                    android:id="@+id/tv_head_plan_date"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_3dp"
                    android:layout_weight="1"
                    style="@style/ser_text_ingreen" />
            </LinearLayout>
            <View style="@style/line_in_pink_style"/>

            <LinearLayout
                style="@style/ry_sum_itemstyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="@dimen/layout_60dp"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    style="@style/app_text_ingreen"
                    android:text="@string/supplier"
                    />
                <TextView
                    android:id="@+id/tv_head_provider"
                    android:layout_width="@dimen/layout_0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/layout_3dp"
                    android:layout_weight="1"
                    style="@style/ser_text_ingreen"
                    />
            </LinearLayout>

        </LinearLayout>

        <include layout="@layout/ryitem_common"/>
    </LinearLayout>

</ScrollView>
    <include layout="@layout/inclu_commit" />
</RelativeLayout>
