<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:paddingTop="@dimen/layout_15dp"
    android:paddingBottom="@dimen/layout_15dp"
    android:background="@drawable/recyclerview_touch_bg">
    <ImageView
        android:id="@+id/iv_gridview_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/tv_gridview_item"
        android:layout_marginTop="@dimen/layout_3dp"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>