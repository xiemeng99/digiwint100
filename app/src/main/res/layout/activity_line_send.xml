<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        android:id="@+id/toolbar_title"
        layout="@layout/activity_title_toolbar_bar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar_title"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_test_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/layout_6dp"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_marginRight="@dimen/layout_10dp"
                android:layout_marginTop="@dimen/layout_6dp"
                android:background="@drawable/yellow_scandetail_bg"
                android:orientation="vertical"
                android:padding="@dimen/layout_5dp">

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="@dimen/layout_50dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/item_no"
                        style="@style/app_text_inwhite"/>

                    <EditText
                        android:id="@+id/et_item_no"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:singleLine="true"
                        android:textColor="@color/outside_yellow"
                        android:textCursorDrawable="@drawable/et_cursor_yellow"
                        android:textSize="@dimen/textSize_14sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                style="@style/ry_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="@dimen/layout_50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/order_number"
                        style="@style/app_text_inwhite" />

                    <TextView
                        android:id="@+id/tv_order_number"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/ser_text_inwhite"/>
                </LinearLayout>

                <View style="@style/ry_line_style" />

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/layout_50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/item_name"
                        style="@style/app_text_inwhite"/>

                    <TextView
                        android:id="@+id/tv_item_name"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/ser_text_inwhite" />
                </LinearLayout>

                <View style="@style/ry_line_style" />

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/layout_50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/model"
                        style="@style/app_text_inwhite" />

                    <TextView
                        android:id="@+id/tv_model"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/ser_text_inwhite" />
                </LinearLayout>

                <View style="@style/ry_line_style" />

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="@dimen/layout_50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/produce_num"
                        style="@style/app_text_inwhite"/>

                    <TextView
                        android:id="@+id/tv_produce_num"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/ser_text_inwhite" />

                    <TextView
                        android:layout_width="@dimen/layout_50dp"
                        android:layout_height="wrap_content"
                        android:text="@string/locator_num_"
                        style="@style/app_text_inwhite"/>

                    <TextView
                        android:id="@+id/tv_locator_num"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/ser_text_inwhite" />
                </LinearLayout>

                <View style="@style/ry_line_style" />

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/layout_120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/order_max_num"
                        style="@style/app_text_inwhite"/>

                    <TextView
                        android:id="@+id/tv_order_max_num"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/ser_text_inwhite"/>
                </LinearLayout>

                <View style="@style/ry_line_style" />

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/layout_120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/line_max_num"
                        style="@style/app_text_inwhite"/>

                    <TextView
                        android:id="@+id/tv_line_max_num"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/ser_text_inwhite"/>
                </LinearLayout>

                <View style="@style/ry_line_style" />

                <LinearLayout
                    style="@style/itemstyle"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/layout_120dp"
                        android:layout_height="wrap_content"
                        android:text="@string/current_max_num"
                        style="@style/app_text_inwhite"/>

                    <EditText
                        android:id="@+id/et_current_num"
                        android:layout_width="@dimen/layout_0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@null"
                        android:inputType="numberDecimal"
                        android:singleLine="true"
                        android:textColor="@color/outside_yellow"
                        android:textCursorDrawable="@drawable/et_cursor_yellow"
                        android:textSize="@dimen/textSize_14sp" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <include layout="@layout/inclu_commit"></include>
</RelativeLayout>
