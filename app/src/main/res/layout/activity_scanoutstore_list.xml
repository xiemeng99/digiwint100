<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <include layout="@layout/activity_title_toolbar_bar"></include>

    <LinearLayout
        android:id="@+id/ll_search_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/layout_10dp"
        android:layout_marginRight="@dimen/layout_10dp"
        android:layout_marginTop="@dimen/layout_6dp"
        android:background="@drawable/yellow_scandetail_bg"
        android:orientation="vertical"
        android:padding="@dimen/layout_5dp">

        <LinearLayout
            android:id="@+id/ll_locator"
            style="@style/itemstyle"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_locator"
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/locator"
                style="@style/app_text_inwhite"/>

            <EditText
                android:id="@+id/et_locator"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/black_32"
                android:textCursorDrawable="@drawable/et_cursor_yellow"
                android:textSize="@dimen/textSize_14sp" />
        </LinearLayout>

        <View style="@style/fg_line_style" />

        <LinearLayout
            android:id="@+id/ll_shipping_order"
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_shipping_order"
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/shipment_order_no"
                style="@style/app_text_inwhite"/>

            <EditText
                android:id="@+id/et_shipping_order"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/black_32"
                android:textCursorDrawable="@drawable/et_cursor_yellow"
                android:textSize="@dimen/textSize_14sp" />
        </LinearLayout>

        <View style="@style/fg_line_style" />

        <LinearLayout
            android:id="@+id/ll_item_no"
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_item_no"
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/item_no"
                style="@style/app_text_inwhite"/>

            <EditText
                android:id="@+id/et_item_no"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/black_32"
                android:textCursorDrawable="@drawable/et_cursor_yellow"
                android:textSize="@dimen/textSize_14sp" />
        </LinearLayout>

        <View style="@style/fg_line_style" />

        <LinearLayout
            android:id="@+id/ll_custom"
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_custom"
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/custom"
                style="@style/app_text_inwhite"/>

            <EditText
                android:id="@+id/et_custom"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/black_32"
                android:textCursorDrawable="@drawable/et_cursor_yellow"
                android:textSize="@dimen/textSize_14sp" />
        </LinearLayout>

        <View style="@style/fg_line_style" />

        <LinearLayout
            android:id="@+id/ll_salesman"
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_salesman"
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/salesman"
                style="@style/app_text_inwhite"/>

            <EditText
                android:id="@+id/et_salesman"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/black_32"
                android:textCursorDrawable="@drawable/et_cursor_yellow"
                android:textSize="@dimen/textSize_14sp" />
        </LinearLayout>

        <View style="@style/fg_line_style" />

        <LinearLayout
            android:id="@+id/ll_operating_department"
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_operating_department"
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/operating_department"
                style="@style/app_text_inwhite" />

            <EditText
                android:id="@+id/et_operating_department"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/black_32"
                android:textCursorDrawable="@drawable/et_cursor_yellow"
                android:textSize="@dimen/textSize_14sp" />
        </LinearLayout>

        <View style="@style/fg_line_style" />

        <LinearLayout
            android:id="@+id/ll_date"
            style="@style/itemstyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_date"
                android:layout_width="@dimen/layout_70dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/shipping_date"
                style="@style/app_text_inwhite" />

            <EditText
                android:id="@+id/et_date"
                android:layout_width="@dimen/layout_0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/layout_10dp"
                android:layout_weight="1"
                android:background="@null"
                android:singleLine="true"
                android:textColor="@color/red50"
                android:textCursorDrawable="@drawable/et_cursor_yellow"
                android:textSize="@dimen/textSize_14sp" />

            <ImageView
                android:id="@+id/date"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/layout_20dp"
                android:src="@drawable/time" />
        </LinearLayout>

        <View style="@style/fg_line_style" />

        <Button
            android:id="@+id/btn_search_sure"
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_40dp"
            android:layout_margin="@dimen/layout_10dp"
            android:background="@drawable/accordingmaterialtop_sharp"
            android:text="@string/label_sure"
            android:textColor="@color/WHITE"
            android:textSize="@dimen/textSize_18sp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/ry_list"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0dp"
        android:layout_marginTop="@dimen/layout_6dp"
        android:layout_weight="1"
        android:visibility="gone"></android.support.v7.widget.RecyclerView>

</LinearLayout>
