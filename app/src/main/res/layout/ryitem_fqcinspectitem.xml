<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/layout_0.5dp"
    android:layout_marginRight="@dimen/layout_0.5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/layout_10dp"
        android:paddingTop="@dimen/layout_10dp">

        <TextView
            android:id="@+id/tv_lineSequence"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/lineSequence"
            android:textColor="@color/black_32"
            android:textSize="@dimen/textSize_14sp" />


        <TextView
            android:id="@+id/tv_check_item"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/check_item"
            android:textColor="@color/black_32"
            android:textSize="@dimen/textSize_14sp" />


        <TextView
            android:id="@+id/tv_check_item_instruction"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="@string/check_item_instruction"
            android:textColor="@color/black_32"
            android:textSize="@dimen/textSize_14sp" />


        <TextView
            android:id="@+id/tv_allow_num"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/allow_num"
            android:textColor="@color/black_32"
            android:textSize="@dimen/textSize_14sp" />


        <TextView
            android:id="@+id/tv_reject_num"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/reject_num"
            android:textColor="@color/black_32"
            android:textSize="@dimen/textSize_14sp" />


        <TextView
            android:id="@+id/tv_sample_num"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/sample_num"
            android:textColor="@color/black_32"
            android:textSize="@dimen/textSize_14sp" />


        <EditText
            android:id="@+id/et_defect_num"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="@string/defect_num"
            android:textColor="@color/textfous_yellow"
            android:textCursorDrawable="@drawable/et_cursor_yellow"
            android:textSize="@dimen/textSize_14sp" />


        <EditText
            android:id="@+id/et_bad_num"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:inputType="numberDecimal"
            android:text="@string/bad_num"
            android:textColor="@color/textfous_yellow"
            android:textCursorDrawable="@drawable/et_cursor_yellow"
            android:textSize="@dimen/textSize_14sp" />


        <TextView
            android:id="@+id/tv_project_check"
            android:layout_width="@dimen/layout_0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/project_check"
            android:textColor="@color/Base_color"
            android:textSize="@dimen/textSize_14sp" />
    </LinearLayout>

    <View
        style="@style/ry_line_style"
        android:layout_marginLeft="@dimen/layout_6dp"
        android:layout_marginRight="@dimen/layout_6dp" />
</LinearLayout>