<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:paddingTop="@dimen/layout_20dp"
    android:paddingBottom="@dimen/layout_20dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0dp"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_red"
            android:layout_width="@dimen/layout_0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/red_off"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_yellow"
            android:layout_width="@dimen/layout_0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/yellow_off"
            android:layout_height="match_parent" />
    </LinearLayout>
    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_blue"
            android:layout_width="@dimen/layout_0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/blue_off"
            android:layout_height="match_parent" />

        <ImageView
            android:id="@+id/iv_green"
            android:layout_width="@dimen/layout_0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:src="@mipmap/green_off"
            android:layout_height="match_parent" />
    </LinearLayout>
</LinearLayout>