<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ImageView
        android:id="@+id/iv_wait_dialog_circle"
        android:layout_width="@dimen/layout_150dp"
        android:layout_height="@dimen/layout_150dp"
        android:layout_gravity="center"
        android:src="@drawable/loading_circle_bg" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/wait_dialog_iv"
            android:layout_width="@dimen/layout_90dp"
            android:layout_height="@dimen/layout_80dp"
            android:background="@drawable/animation_list_refresh_dgw" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="@dimen/layout_5dp"
            android:text="@string/label_loader"
            android:textColor="@color/white"
            android:textSize="@dimen/textSize_14sp" />
    </LinearLayout>
</FrameLayout>